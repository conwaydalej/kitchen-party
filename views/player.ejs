                ['F', ["F3", "A3", "C4"]],
                ['F1', 'F3'],
                ['F2', 'A3'],
                ['F3', 'C4']
            ];

            var accordion = new Tone.Sampler({
                'C3' : '11-C3.wav',
                'E3' : '15-E3.wav',
                'G3' : '18-G3.wav',
                'A3' : '20-A3.wav',
                'B3' : '22-B3.wav',
                'C4' : '23-C4.wav',
