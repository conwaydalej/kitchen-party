            var notes = [
                ['C', ["C3", "E3", "G3"]],
                ['C1', 'C3'],
                ['C2', 'E3'],
                ['C3', 'G3'],

                ['G', ["G3", "B3", "D4"]],
                ['G1', 'G3'],
